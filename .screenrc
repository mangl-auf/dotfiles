startup_message off
defutf8 on
vbell off
defscrollback 1000
autodetach on
altscreen on

escape ^Jj

shelltitle "$ |zsh"
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[screen][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

termcapinfo xterm*|alacritty*|rxvt*|kterm*|Eterm* ti@:te@
#truecolor on
#term screen-256color

bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
